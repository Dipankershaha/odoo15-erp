<odoo>

    
    <record id="employee_major_tree" model="ir.ui.view">
        <field name="name">employee.major.tree</field>
        <field name="model">employee.major</field>
        <field name="arch" type="xml">
            <tree>
                    <field name='name'/>
                    
                    
            </tree>
        </field>
    </record>


    <record id="employee_major_form" model="ir.ui.view">
        <field name="name">employee.major.form</field>
        <field name="model">employee.major</field>
        <field name="arch" type="xml">
            <form>
               
                <sheet>
                    <group>
                        <group>
                            <field name='name'/>
                            
                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
 

    <record id="employee_major_search" model="ir.ui.view">
        <field name="name">employee.major.search</field>
        <field name="model">employee.major</field>
        <field name="arch" type="xml">
            <search string="major">
                <field name='name'/>
            </search>
        </field>
    </record>

    <record id="employee_major_action" model="ir.actions.act_window">
        <field name="name">Employee major</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.major</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create major
            </p>
        </field>
    </record>

    

   
</odoo>
